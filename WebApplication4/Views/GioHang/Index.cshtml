@model List<CartItem>
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src ="@Url.Content("/ProDuctImage/Images/Images/"+item.AnhDaiDien)" alt="">
                                        <h5>@item.ProductName</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        $@item.Price
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <span class="dec qtybtn">-</span>
                                                <input type="text" value="@item.Quantity">
                                                <span class="inc qtybtn">+</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__total">
                                        $@(item.Quantity * item.Price)
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <span class="icon_close"></span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a href="#" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    <a href="#" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        Update Cart
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>Discount Codes</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">APPLY COUPON</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                        <li>Subtotal <span>$@Model.Sum(item => item.Quantity * item.Price)</span></li>
                        <li>Total <span>$@Model.Sum(item => item.Quantity * item.Price)</span></li>
                    </ul>
                    <a href="#" class="primary-btn">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Remove 'dec qtybtn' spans with odd indices
        var decSpans = document.getElementsByClassName('dec qtybtn');
        for (var i = decSpans.length - 1; i >= 0; i--) {
            if (i % 2 !== 0) {
                decSpans[i].remove();
            }
        }

        // Remove 'inc qtybtn' spans with odd indices
        var incSpans = document.getElementsByClassName('inc qtybtn');
        for (var i = incSpans.length - 1; i >= 0; i--) {
            if (i % 2 !== 0) {
                incSpans[i].remove();
            }
        }
    });
</script>
<style>
    .shoping__cart__item img {
        max-width: 100px; /* Adjust the size as needed */
        height: auto;
        object-fit: cover; /* Ensures the image covers the area without distortion */
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var images = document.querySelectorAll('.shoping__cart__item img');
        images.forEach(function (img) {
            var src = img.getAttribute('src');
            var highResSrc = src.replace('/Images/', '/Images/HighRes/'); // Assuming high-res images are stored in a different folder
            var highResImg = new Image();
            highResImg.onload = function () {
                img.src = highResSrc;
            };
            highResImg.src = highResSrc;
        });
    });
</script>

